{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_COLOR_DIAGNOSTICS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "REN_BUILD_SDL2_PLUGIN": "ON",
        "REN_BUILD_IMGUI_PLUGIN": "ON",
        "REN_BUILD_EXAMPLES": "ON",
        "REN_BUILD_TESTS": "ON",
        "REN_ASSERTIONS": "ON",
        "REN_VULKAN_VALIDATION": "ON",
        "REN_VULKAN_DEBUG_NAMES": "ON",
        "REN_RENDER_GRAPH_DEBUG": "ON",
        "REN_SHADER_SOURCE_LEVEL_DEBUG_INFO": "ON"
      }
    },
    {
      "name": "windows",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static-md",
        "REN_SHADER_SOURCE_LEVEL_DEBUG_INFO": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "mingw",
      "hidden": true,
      "inherits": "windows",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-mingw-static"
      }
    },
    {
      "name": "linux",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-mingw",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-mingw-static",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "/usr/share/mingw/toolchain-x86_64-w64-mingw32.cmake",
        "REN_BUILD_TESTS": "OFF",
        "REN_VULKAN_VALIDATION": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "dev",
      "inherits": "debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "REN_BUILD_TESTS": "OFF",
        "REN_ASSERTIONS": "OFF",
        "REN_VULKAN_VALIDATION": "OFF",
        "REN_VULKAN_DEBUG_NAMES": "OFF",
        "REN_RENDER_GRAPH_DEBUG": "OFF",
        "REN_SHADER_SOURCE_LEVEL_DEBUG_INFO": "OFF"
      }
    },
    {
      "name": "prof",
      "inherits": "release",
      "hidden": true,
      "cacheVariables": {
        "REN_PROFILER": "ON"
      }
    },
    {
      "name": "gpu-prof",
      "inherits": "release",
      "hidden": true,
      "cacheVariables": {
        "REN_VULKAN_DEBUG_NAMES": "ON",
        "REN_RENDER_GRAPH_DEBUG": "ON"
      }
    },
    {
      "name": "windows-debug",
      "inherits": [
        "windows",
        "debug"
      ]
    },
    {
      "name": "windows-dev",
      "inherits": [
        "windows",
        "dev"
      ]
    },
    {
      "name": "windows-release",
      "inherits": [
        "windows",
        "release"
      ]
    },
    {
      "name": "windows-prof",
      "inherits": [
        "windows",
        "prof"
      ]
    },
    {
      "name": "windows-gpu-prof",
      "inherits": [
        "windows",
        "gpu-prof"
      ]
    },
    {
      "name": "mingw-debug",
      "inherits": [
        "mingw",
        "debug"
      ]
    },
    {
      "name": "mingw-dev",
      "inherits": [
        "mingw",
        "dev"
      ]
    },
    {
      "name": "mingw-release",
      "inherits": [
        "mingw",
        "release"
      ]
    },
    {
      "name": "linux-debug",
      "inherits": [
        "linux",
        "debug"
      ]
    },
    {
      "name": "linux-dev",
      "inherits": [
        "linux",
        "dev"
      ]
    },
    {
      "name": "linux-release",
      "inherits": [
        "linux",
        "release"
      ]
    },
    {
      "name": "linux-prof",
      "inherits": [
        "linux",
        "prof"
      ]
    },
    {
      "name": "linux-gpu-prof",
      "inherits": [
        "linux",
        "gpu-prof"
      ]
    },
    {
      "name": "linux-mingw-debug",
      "inherits": [
        "linux-mingw",
        "debug"
      ]
    },
    {
      "name": "linux-mingw-dev",
      "inherits": [
        "linux-mingw",
        "dev"
      ]
    },
    {
      "name": "linux-mingw-release",
      "inherits": [
        "linux-mingw",
        "release"
      ]
    }
  ]
}
